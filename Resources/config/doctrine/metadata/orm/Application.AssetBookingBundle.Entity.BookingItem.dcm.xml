<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Application\AssetBookingBundle\Entity\BookingItem" table="booking_item">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <one-to-one field="asset" target-entity="Asset" inversed-by="asset">
               <join-column name="asset_id" referenced-column-name="id" on-delete="CASCADE" on-update="CASCADE"/>
        </one-to-one>


        <field name="groupInfoNumberOfAdults" column="group_info_number_of_adults" type="integer" />
        <field name="groupInfoNumberOfChildren" column="group_info_number_of_children" type="integer" />

        <field name="consumptionElectricity" column="consumption_electricity" type="float" />
        <field name="consumptionFuel" column="consumption_fuel" type="float" />
        <field name="consumptionGas" column="consumption_gas" type="float" />
        <field name="consumptionWater" column="consumption_water" type="float" />

        <field name="stateOfPropertyRemarks" column="state_of_property_remarks" type="text" />


        <field name="createdAt" column="created_at" type="datetime" />
        <field name="updatedAt" column="updated_at" type="datetime" />

    </entity>


</doctrine-mapping>