<!-- Application/HelloBundle/Resources/config/doctrine/metadata/orm/Application.HelloBundle.Entity.User.dcm.xml -->
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Application\AssetBookingBundle\Entity\Customer" table="customer">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="firstName" column="first_name" type="string" length="150"  nullable="true"/>
        <field name="lastName" column="last_name" type="string" length="150"  nullable="true"/>
        <field name="companyName" column="company_name" type="string" length="150"  nullable="true"/>

        <field name="streetAndNr" column="street_and_nr" type="string" length="150" nullable="true" />
        <field name="zip" column="zip" type="string" length="10" nullable="true"/>
        <field name="city" column="city" type="string" length="100" nullable="true"/>
        <field name="country" column="country" type="string" length="2" nullable="true"/>


        <field name="phone" column="phone" type="string" length="20"  nullable="true"/>
        <field name="email" column="email" type="string" length="150"  nullable="true"/>

        <field name="language" column="language" type="string" length="2"  nullable="true"/>

       

    </entity>


</doctrine-mapping>